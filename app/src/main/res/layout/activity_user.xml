<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical"
    tools:context="com.diandian.pdd.diandiancha.user.UserActivity">


    <FrameLayout
        android:id="@+id/container_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        
    </FrameLayout>
<TextView
    android:layout_width="match_parent"
    android:background="#cccccc"
    android:layout_height="@dimen/dp_0.5" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/item1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_shangping"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="商品"
            android:drawablePadding="@dimen/dp_4"
            android:textColor="@color/color_useritem"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:layout_width="0dp"
            android:id="@+id/item2"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_gouwuche"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="购物车"
            android:drawablePadding="@dimen/dp_4"
            android:textColor="@color/color_useritem"
            android:textSize="@dimen/sp_18" />
        <TextView
            android:id="@+id/item3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_order"
            android:gravity="center"
            android:padding="@dimen/dp_10"
            android:text="订单"
            android:drawablePadding="@dimen/dp_4"
            android:textColor="@color/color_useritem"
            android:textSize="@dimen/sp_18" />
    </LinearLayout>


</LinearLayout>
