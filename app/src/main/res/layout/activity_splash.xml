<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context="com.diandian.pdd.diandiancha.login.SplashActivity">


    <ImageView
        android:layout_width="match_parent"
        android:scaleType="centerCrop"
        android:src="@mipmap/login1"
        android:layout_height="match_parent" />
    <LinearLayout
        android:orientation="horizontal"
        android:id="@+id/layout_login"
        android:layout_marginLeft="@dimen/dp_20"
        android:layout_marginBottom="@dimen/dp_18"
        android:layout_marginRight="@dimen/dp_20"
        android:layout_alignParentBottom="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/button_login"
            android:text="登录"
            android:textColor="#FFFFFF"
            android:textSize="@dimen/sp_20"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_45"
            android:paddingRight="@dimen/dp_45"
            android:enabled="true"
            android:background="@drawable/btn_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/button_registr"
            android:text="注册"
            android:textColor="#353535"

            android:textSize="@dimen/sp_20"
            android:paddingBottom="@dimen/dp_10"
            android:paddingTop="@dimen/dp_10"
            android:paddingLeft="@dimen/dp_45"
            android:paddingRight="@dimen/dp_45"
            android:enabled="true"
            android:background="@drawable/btn_registr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

</RelativeLayout>
